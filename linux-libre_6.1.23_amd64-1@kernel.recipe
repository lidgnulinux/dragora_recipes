# Load specific instructions for supported architectures
case "$(uname -m)" in
x86_64*)
    . "${CWD}/amd64"
    ;;
i586 | i686 )
    . "${CWD}/i586"
    ;;
*)
    echo "${0}: There are no kernel recipe available for your architecture." 1>&2
    echo "    Feel free to contact the developers." 1>&2
    exit 1;
    ;;
esac

