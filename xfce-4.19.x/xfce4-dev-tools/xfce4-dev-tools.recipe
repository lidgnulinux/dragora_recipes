# Build recipe for .
#

# Exit immediately on any error
set -e

program=xfce4-dev-tools
version=4.19.4
release=0
description="Xfce developer tools"
homepage="https://docs.xfce.org/xfce/xfce4-dev-tools/start"
license="GPL-2.0-or-later"

tarname=xfce4-dev-tools-xfce4-dev-tools-4.19.4.tar.gz
fetch="https://gitlab.xfce.org/xfce/xfce4-dev-tools/-/archive/xfce4-dev-tools-4.19.4/$tarname"

srcdir=xfce4-dev-tools-xfce4-dev-tools-4.19.4

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	cp -r "${worktree}/xdt-csource.1" docs/

	autoreconf -fvi
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make 
	make DESTDIR="$destdir" install 
}
