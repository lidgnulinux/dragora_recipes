# Build recipe for xfce4-appfinder.
#

# Exit immediately on any error
set -e

program=xfce4-appfinder
version=4.19.3
release=0
description="Xfce application finder"
homepage="https://xfce.org/"
license="GPL-2.0-or-later"

tarname=xfce4-appfinder-$version.tar.bz2
fetch="https://archive.xfce.org/src/xfce/xfce4-appfinder/${version%.*}/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	autoreconf -vif
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static

	make -j2 
	make DESTDIR="$destdir" install 
}
