# Exit immediately on any error
set -e

program=cmake
version=3.29.3
release=0

# Define a category for the output of the package name
pkgcategory=devel

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch="https://cmake.org/files/v${version%.*}/$tarname"

description="
Cross-platform make system.

CMake is a family of tools designed to build, test and package
software.  CMake is used to control the software compilation process
using simple platform and compiler independent configuration files.
"

homepage=https://www.cmake.org
license=Custom

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    rm -rf BUILD
    mkdir BUILD
    cd BUILD

    ../configure \
    CFLAGS="$QICFLAGS" CXXFLAGS="$QICXXFLAGS" LDFLAGS="$QILDFLAGS" \
     --prefix=/usr \
     --mandir=$mandir \
     --docdir=$docsdir \
     --system-libuv \
     --system-curl \
     --system-expat \
     --system-zlib \
     --system-bzip2 \
     --system-libarchive \
     --no-system-jsoncpp \
     --parallel=2

    make -j2 V=1
    make -j2 DESTDIR="$destdir" install
}

