# Build recipe for fuzzel.
#

# Exit immediately on any error
set -e

program=fuzzel
version=1.10.2
release=0

# Define a category for the output of the package name
pkgcategory=wayland_apps

tarname=${version}.tar.gz

# Remote source(s)
fetch=https://codeberg.org/dnkl/fuzzel/archive/$tarname

description="Application launcher for wlroots-based Wayland compositors"

homepage=https://codeberg.org/dnkl/fuzzel/
license="MIT"

srcdir=${program}

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    rm -rf BUILD
    mkdir BUILD
    cd BUILD

    patch -p1 -d .. < ${worktree}/patches/fuzzel/no-werror.patch

    CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    meson setup $configure_args \
	-Dsvg-backend=librsvg \
	..

    ninja 
    DESTDIR="$destdir" ninja install

    cd ..
}
