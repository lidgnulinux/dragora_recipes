
#!/bin/sh
# Start/stop/restart the upowerd daemon:

if [ "$1" = "stop" ]; then
  echo "Stopping upowerd..."
  kill "$(pgrep upowerd)" 
elif [ "$1" = "restart" ]; then
  echo "Restarting upowerd..."
  kill "$(pgrep upowerd)" 
  sleep 1
  /usr/libexec/upowerd
else # assume $1 = start:
  echo "Starting upowerd:  /usr/libexec/upowerd"
  /usr/libexec/upowerd &
fi
