# Build recipe for libxfce4windowing.
#

# Exit immediately on any error
set -e

program=libxfce4windowing
version=4.19.9
release=1
description="Windowing concept abstraction library for X11 and Wayland."
homepage="https://gitlab.xfce.org/xfce/libxfce4windowing"
license="GNU LGPLv2.1"

tarname=$program-$program-$version.tar.gz
fetch="https://gitlab.xfce.org/xfce/libxfce4windowing/-/archive/$program-$version/$tarname"

srcdir=$program-$program-$version

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .
	
	tar -xvf "${worktree}/wlr-protocols.tar.gz" -C protocols/wlr-protocols

	rm -rf BUILD
	mkdir BUILD
	cd BUILD

	CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
	meson setup $configure_args \
		-Dgtk-doc=false \
		-Dwayland=enabled \
	    ..
	
	ninja -j2
	DESTDIR="$destdir" ninja -j2 install

	cd ..
}
