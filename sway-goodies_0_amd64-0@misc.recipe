# Build recipe for sway-goodies.
#
# Exit immediately on any error
set -e

program=sway-goodies
version=0
release=0
description="Some (maybe) usable scripts for SwayWM."
homepage="https://gitlab.com/lidgnulinux/sway-goodies"
license="GPL-2.0-or-later"
pkgcategory=misc

build() {
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .
    
	mkdir -p "${destdir}"/usr/bin

	install -Dm755 "${worktree}/archive/sway-goodies/get_cursor_coordinate_wayland" -t ${destdir}/usr/bin/
	install -Dm755 "${worktree}/archive/sway-goodies/scratchpad_window_list"  -t ${destdir}/usr/bin/
	install -Dm755 "${worktree}/archive/sway-goodies/sway_toggle_desktop"     -t ${destdir}/usr/bin/
	install -Dm755 "${worktree}/archive/sway-goodies/sway_window_menu"        -t ${destdir}/usr/bin/
	install -Dm755 "${worktree}/archive/sway-goodies/swaybar_toggle_position" -t ${destdir}/usr/bin/
	install -Dm755 "${worktree}/archive/sway-goodies/sway_print_tree" -t ${destdir}/usr/bin/
}
