# Build recipe for vulkan-loader.
#
# Exit immediately on any error
set -e

program=vulkan-loader
_program=Vulkan-Loader
version=1.3.261.1
release=0

# Define a category for the output of the package name
pkgcategory=libs

tarname=${program}-sdk-${version}.tar.gz

# Remote source(s)
fetch=https://github.com/khronosgroup/vulkan-loader/archive/refs/tags/sdk-$version/$tarname

description="Vulkan Installable Client Driver (ICD) Loader"

homepage=https://www.khronos.org/vulkan
license="Apache-2.0"

srcdir=$_program-sdk-$version

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .
	
    cmake -B build -G Ninja \
    	-DCMAKE_BUILD_TYPE=Release \
    	-DCMAKE_INSTALL_PREFIX=/usr \
    	-DCMAKE_INSTALL_LIBDIR=lib \
    	-DCMAKE_INSTALL_SYSCONFDIR=/etc \
    	-DCMAKE_INSTALL_DATADIR=share \
    	-DCMAKE_SKIP_RPATH=True \
    	-DVULKAN_HEADERS_INSTALL_DIR=/usr
    cmake --build build

    DESTDIR="$destdir" cmake --install build
}

