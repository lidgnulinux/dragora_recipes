# Build recipe for lftp.
#
# Exit immediately on any error
set -e

program=lftp
version=4.9.2
release=0

# Define a category for the output of the package name
pkgcategory=cli-tool

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=https://lftp.yar.ru/ftp/$tarname

description="Sophisticated ftp/http client"

homepage=https://lftp.tech
license="GPL-3.0-or-later"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .
	
    patch -p0 < ${worktree}/patches/lftp/patch-src_lftp__ssl.cc

    ./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--with-openssl \
	--with-modules \
	--disable-nls \
	--disable-static \
	--enable-threads=posix
    
    make
    make DESTDIR="$destdir" install
    rm -f "$destdir"/usr/lib/charset.alias
}

