# Build recipe for samurai.
#
# Exit immediately on any error
set -e

program=samurai
version=1.2
release=0

# Define a category for the output of the package name
pkgcategory=devel

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://github.com/michaelforney/samurai/releases/download/$version/$tarname

description="ninja-compatible build tool written in C"

homepage=https://github.com/michaelforney/samurai
license="Apache-2.0"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    patch -p1 < ${worktree}/patches/samurai/CVE-2021-30218.patch	
    patch -p1 < ${worktree}/patches/samurai/CVE-2021-30219.patch	

    make
    make DESTDIR="$destdir" PREFIX=/usr install
    ln -s samu "$destdir"/usr/bin/ninja
}

