# Build recipe for libseccomp.
#

# Exit immediately on any error
set -e

program=libseccomp
version=2.5.5
release=0

# Define a category for the output of the package name
pkgcategory=devel

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://github.com/seccomp/libseccomp/releases/download/v$version/$tarname

description="interface to the Linux Kernel's syscall filtering mechanism"

homepage=https://github.com/seccomp/libseccomp
license="LGPL-2.1-or-later"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    patch -p1 < ${worktree}/patches/libseccomp/remove-redefinition-prctl.patch 

    ./configure \
    	--prefix=/usr \
    	--sysconfdir=/etc \
    	--mandir=/usr/share/man \
    	--infodir=/usr/share/info \
    	--enable-python \
    	--enable-static \
    	--localstatedir=/var

    make
    make DESTDIR="$destdir" install
}
