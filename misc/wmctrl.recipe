# Build recipe for wmctrl.
#

# Exit immediately on any error
set -e

program=wmctrl
version=0
release=0
description="Unix command-line tool to interact with an EWMH/NetWM-compatible X Window Manager"
homepage="https://github.com/Conservatory/wmctrl"
license="GPL-2.0 license"

commit=1105759c5312061ccfdea407810d2f9b4d274260
tarname=$commit.zip
fetch="https://github.com/saravanabalagi/wmctrl/archive/$tarname"

srcdir=wmctrl-$commit

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	./configure \
		--disable-static \
		--prefix=/usr 

	make 
	make DESTDIR="$destdir" install 
}
