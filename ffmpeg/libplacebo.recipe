# Build recipe for libplacebo.
#

# Exit immediately on any error
set -e

program=libplacebo
version=6.338.2
_pkgver=${version/_/-}
release=0
description="Reusable library for GPU-accelerated video/image rendering"
homepage="https://code.videolan.org/videolan/libplacebo"
license="LGPL-2.1-or-later"

tarname=$program-v$version.tar.gz
fetch="https://code.videolan.org/videolan/libplacebo/-/archive/v$_pkgver/$tarname"

srcdir=libplacebo-v$_pkgver

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	rm -rf BUILD
	mkdir BUILD
	cd BUILD
	
	patch -p1 -d .. < "${worktree}/patches/libplacebo/disable_thirdparty_python_module.diff"

	CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
	meson setup $configure_args \
		-Dbackend_max_links=4 \
		-Ddemos=false \
		-Ddovi=disabled \
		-Dglslang=enabled \
		-Dlcms=enabled \
		-Dlibdovi=disabled \
		-Dshaderc=disabled \
		-Dtests="false" \
		-Dvulkan=enabled \
		..
	
	ninja -j2
	DESTDIR="$destdir" ninja -j2 install
	
	cd ..
}
